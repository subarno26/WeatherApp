<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GrowthPOC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="WeatherMainText" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif-thin</item>
    </style>

    <style name="WeatherSubText" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">@dimen/layout_20</item>
        <item name="android:layout_height">@dimen/layout_20</item>
        <item name="android:layout_marginTop">@dimen/margin_70</item>
        <item name="android:layout_marginStart">@dimen/margin_20</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>