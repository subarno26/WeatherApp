<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download_bg"
    tools:context=".views.DownloadFragment">

    <TextView
        android:id="@+id/tv_pdf"
        android:layout_width="@dimen/layout_200"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_150"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="@string/nasa_weather_forecast_pdf"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/size_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_download_pdf"
        android:layout_width="@dimen/layout_30"
        android:layout_height="@dimen/layout_30"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@drawable/pdf"
        app:layout_constraintEnd_toEndOf="@id/tv_pdf"
        app:layout_constraintStart_toStartOf="@id/tv_pdf"
        app:layout_constraintTop_toBottomOf="@id/tv_pdf"
        app:tint="@color/white"
        android:contentDescription="@string/download_pdf"/>

</androidx.constraintlayout.widget.ConstraintLayout>